---
import ActionBTN from '@/components/ActionBTN.astro'

const {title, description, image, link, revert, id} = Astro.props
---

<section class="px-4 md:px-6" id={id}>
  <div class="container grid items-start gap-12 py-12 lg:pt-24 mx-auto">
    <div class="grid items-center gap-6 lg:grid-cols-12 lg:gap-12">
      <img
        src={image}
        width="600"
        height="340"
        alt="Image"
        class={`aspect-video overflow-hidden rounded-xl object-cover object-center sm:w-full col-span-6 ${revert ? 'md:order-1' : ''} `}
      />

      <div class="flex flex-col justify-center space-y-4 col-span-6">
        <div class="space-y-2">
          <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl text-balance text-black dark:text-white">
            {title}
          </h2>

          {description.map(paragraph => (
            <p
              class="text-gray-500 text-md text-pretty dark:text-gray-400"
            >
              {paragraph}
            </p>
          ))}
        </div>
        <ActionBTN text='Ver Curso' link={link} openNewWindow />
      </div>
    </div>
  </div>
</section>